<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date{yyyy/MM/dd HH:mm:ss} %5p | %-55logger{55} | %m %n</pattern>
		</encoder>
	</appender>

	<logger name="org.springframework">
		<level value="INFO"/>
	</logger>

	<root>
		<level value="WARN" />
		<appender-ref ref="CONSOLE"/>
	</root>

</configuration>